<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_layer"
    android:id="@+id/my_layer"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.takethraithip.myproject.MainActivity"
    tools:showIn="@layout/app_bar_main">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Daily Task"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />

    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/cv"
        app:cardBackgroundColor="@color/water_main_task"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="16dp"
            android:id="@+id/waterRelative"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/testimage"
                android:src="@drawable/test00"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/testimage"
                android:text="Drinking Water"
                android:textColor="@color/textForRed"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/drinkingTxt"
                android:layout_marginLeft="16dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notiwater"
                android:text="Notification"
                android:textColor="@color/textForRed"
                android:layout_toRightOf="@+id/testimage"
                android:layout_below="@+id/drinkingTxt"

                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/waterDaily"
                android:layout_alignParentEnd="true"
                android:textColor="@color/textForRed"
                android:text="0/8"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardBackgroundColor="@color/light_main_task"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="16dp"
            android:id="@+id/eyeRelative"

            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/testimage1"
                android:src="@drawable/test00"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/testimage1"
                android:text="Eye rested"
                android:textStyle="bold"
                android:textColor="@color/textForRed"
                android:textSize="16dp"
                android:id="@+id/drinkingTxt1"
                android:layout_marginLeft="16dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notiwater1"
                android:text="Notification"
                android:textColor="@color/textForRed"
                android:layout_toRightOf="@+id/testimage1"
                android:layout_below="@+id/drinkingTxt1"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eyeDaily"
                android:layout_alignParentEnd="true"
                android:text="0/4"
                android:textSize="25dp"
                android:textColor="@color/textForRed"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardBackgroundColor="@color/pos_main_task"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="16dp"
            android:id="@+id/posRelative"

            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/testimage2"
                android:src="@drawable/test00"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/testimage2"
                android:text="Position Changed"
                android:textStyle="bold"
                android:textColor="@color/textForRed"
                android:textSize="16dp"
                android:id="@+id/drinkingTxt2"
                android:layout_marginLeft="16dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notiwater2"
                android:text="Notification"
                android:textColor="@color/textForRed"
                android:layout_toRightOf="@+id/testimage2"
                android:layout_below="@+id/drinkingTxt2"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/posDaily"
                android:layout_alignParentEnd="true"
                android:text="0/4"
                android:textSize="25dp"
                android:textColor="@color/textForRed"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>

    <ImageView
        android:id="@+id/notiView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/main_reminder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/reminder"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toTopOf="@+id/notiView"
        app:layout_constraintEnd_toEndOf="@+id/notiView"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/notiView" />

    <ImageView
        android:id="@+id/plantView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/main_plant" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:text="@string/plantMainPic"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toTopOf="@+id/plantView"
        app:layout_constraintEnd_toEndOf="@+id/plantView"
        app:layout_constraintStart_toStartOf="@+id/plantView" />

    <ImageView
        android:id="@+id/statView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plantView"
        app:layout_constraintStart_toEndOf="@+id/notiView"
        app:srcCompat="@drawable/main_stat" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:text="@string/statMainPic"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toTopOf="@+id/statView"
        app:layout_constraintEnd_toEndOf="@+id/statView"
        app:layout_constraintStart_toStartOf="@+id/statView" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />


</android.support.constraint.ConstraintLayout>
