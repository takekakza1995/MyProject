<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="16dp"
            android:id="@+id/waterRelative"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/testimage"
                android:src="@drawable/test00"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/testimage"
                android:text="Drinking Water"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/drinkingTxt"
                android:layout_marginLeft="16dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notiwater"
                android:text="Notification"
                android:layout_toRightOf="@+id/testimage"
                android:layout_below="@+id/drinkingTxt"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/waterDaily"
                android:layout_alignParentEnd="true"
                android:text="0/8"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="16dp"
        android:id="@+id/eyeRelative"

        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/testimage1"
            android:src="@drawable/test00"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/testimage1"
            android:text="Eye rested"
            android:textStyle="bold"
            android:textSize="16dp"
            android:id="@+id/drinkingTxt1"
            android:layout_marginLeft="16dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notiwater1"
            android:text="Notification"
            android:layout_toRightOf="@+id/testimage1"
            android:layout_below="@+id/drinkingTxt1"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eyeDaily"
            android:layout_alignParentEnd="true"
            android:text="0/4"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="16dp"
            android:id="@+id/posRelative"

            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/testimage2"
                android:src="@drawable/test00"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/testimage2"
                android:text="Eye rested"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/drinkingTxt2"
                android:layout_marginLeft="16dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notiwater2"
                android:text="Notification"
                android:layout_toRightOf="@+id/testimage2"
                android:layout_below="@+id/drinkingTxt2"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/posDaily"
                android:layout_alignParentEnd="true"
                android:text="0/4"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>